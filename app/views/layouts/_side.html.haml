.section.box
  %h3= "#{app_user.name}"
  .profile
    %div
      = image_tag app_user.profile_image_url
      = "@#{app_user.login}"
    %div
      = "フォロワー数：#{app_user.followers_count}人"
    %div
      = app_user.description
    %div
      #follow-nanasi3
  %h4 フォローしている人
  #friends

- if action_name == 'show'
  .section
    %h3 ツイート
    %script(src="http://widgets.twimg.com/j/2/widget.js")
    :javascript
      new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 7,
        interval: 6000,
        width: 'auto',
        height: 300,
        theme: {
          shell: {
            background: '#bbbbbb',
            color: '#616161'
          },
          tweets: {
            background: '#e6e6e6',
            color: '#595959',
            links: '#005eff'
          }
        },
        features: {
          scrollbar: true,
          loop: false,
          live: true,
          hashtags: true,
          timestamp: true,
          avatars: true,
          behavior: 'all'
        }
      }).render().setUser('#{app_user.login}').start();

  
= yield(:side)

